@model IEnumerable<MovieRent.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

@Html.ActionLink("Add a Customer", "Create", "Customer", new { @class = "btn btn-default"})
<br />
<br />
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(Model => Model.Name)</th>
        <th>Discount Rate</th>
        <th>Membership Type</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {

    <tr>
        <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</td>
        <td>@item.Membership.DiscountRate%</td>
        <td>@item.Membership.Name</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
    </tr>
    }
</table>

    

